<!-- torso robot -->

	<Robot name="r3">
        <KinBody name="torso" makejoinedlinksadjacent="1">


            <Body name="r30" type="dynamic">
            <offsetfrom>cintura</offsetfrom>
            <Translation>0 0 0.1932</Translation>
            <RotationAxis>0 0 1 0</RotationAxis>
            <Geom type="trimesh">
            <Render>models/3.0^torso_simple_links.wrl</Render>
            <collision>models/3.0^torso_simple_links.wrl</collision>
            </Geom>
            <Mass type="custom">
              <density>1</density>
            </Mass>
            </Body>

	    <Joint circular="true" name="q30" type="hinge">
            <Body>cintura</Body>
            <Body>r30</Body>
            <offsetfrom>r30</offsetfrom>
            <weight>1.0</weight>
            <limitsdeg>-20 20</limitsdeg>
            <axis>0 0 1</axis>
            <maxvel>3</maxvel>
            <resolution>1</resolution>
            </Joint>

	    <Body name="r31" type="dynamic">
            <offsetfrom>r30</offsetfrom>
            <Translation>0 0 0</Translation>
            <Geom type="trimesh">
            <Render>models/3.1^torso_simple_links.wrl</Render>
            <collision>models/3.1^torso_simple_links.wrl</collision>
            </Geom>
            <Mass type="custom">
              <density>1</density>
            </Mass>
            </Body>

	    <Joint circular="true" name="q31" type="hinge">
            <Body>r30</Body>
            <Body>r31</Body>
            <offsetfrom>r30</offsetfrom>
            <weight>1.0</weight>
            <limitsdeg>-80 80</limitsdeg>
            <axis>0 1 0</axis>
            <maxvel>3</maxvel>
            <resolution>1</resolution>
            </Joint>

	  </KinBody>


  <Manipulator name="m4">
    <effector>r31</effector>   <!-- last link where end effector is attached-->
    <base>r30</base>           <!-- base link-->
    <!-- the id of the inverse kinematics solver, it is not necessary to-->
    <!-- specify an ik solver for every robot. But if there is one,-->
    <!-- use iksolver field to identity it.-->
    <!-- <iksolver>MyTriDOFSolver</iksolver> -->

    <Translation>0 0 0</Translation>
  </Manipulator>

          </Robot>


