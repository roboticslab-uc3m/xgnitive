<Robot name="left_leg_robot">
  <KinBody name="left_leg" makejoinedlinksadjacent="false">

<!--This link added for hip joint-->
    <body name="left_leg/hip_bone">
	<Translation>0 0 0.1</Translation>

      <geom type="box">
        <extents>0.001 0.001 0.001</extents>
      </geom>
    </body>

    <Body name="left_leg/hip_yaw" type="dynamic">
	<Translation>0 0 0</Translation>
	<RotationAxis>0 0 1 +90</RotationAxis>
      <Geom type="trimesh">
        <Render>models/left_leg/hip_yaw.wrl</Render>
	<collision>models/left_leg/hip_yaw.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="left_leg/hip_yaw" type="hinge">
      <Body>left_leg/hip_bone</Body>
      <Body>left_leg/hip_yaw</Body>
      <offsetfrom>left_leg/hip_bone</offsetfrom>
      <weight>4</weight>
      <limitsdeg>-20 20</limitsdeg>
      <axis>0 0 1</axis>
      <maxvel>3</maxvel>
      <resolution>1</resolution>
    </Joint>

    <Body name="left_leg/hip_roll" type="dynamic">
	<offsetfrom>left_leg/hip_yaw</offsetfrom>
	<Translation>0 0 0</Translation>
	<!--<RotationAxis>1 1 1 120</RotationAxis>
	<RotationAxis>-0.5774,0.5774,-0.5774 120</RotationAxis>-->
      <Geom type="trimesh">
        <Render>models/left_leg/hip_roll.wrl</Render>
	<collision>models/left_leg/hip_roll.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="left_leg/hip_roll" type="hinge">
      <Body>left_leg/hip_yaw</Body>
      <Body>left_leg/hip_roll</Body>
      <offsetfrom>left_leg/hip_yaw</offsetfrom>
      <weight>4</weight>
      <limitsdeg>-80 80</limitsdeg>
      <axis>0 1 0</axis>
      <maxvel>3</maxvel>
      <resolution>1</resolution>
    </Joint>


    <Body name="left_leg/thigh" type="dynamic">
	<Translation>-0.0165 0 0</Translation>
	<offsetfrom>left_leg/hip_roll</offsetfrom>
      <Geom type="trimesh">
        <Render>models/left_leg/thigh.wrl</Render>
	<collision>models/left_leg/thigh.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="left_leg/hip_pitch" type="hinge">
      <Body>left_leg/hip_roll</Body>
      <Body>left_leg/thigh</Body>
      <offsetfrom>left_leg/thigh</offsetfrom>
      <weight>4</weight>
      <limitsdeg>-80 80</limitsdeg>
      <axis>1 0 0</axis>
      <maxvel>3</maxvel>
      <resolution>1</resolution>
    </Joint>

    <Body name="left_leg/leg" type="dynamic">
	<offsetfrom>left_leg/thigh</offsetfrom>
	<Translation>0 0 -0.33</Translation>
      <Geom type="trimesh">
        <Render>models/left_leg/leg.wrl</Render>
	<collision>models/left_leg/leg.wrl</collision>
      </Geom>
    </Body>


    <Joint circular="true" name="left_leg/knee" type="hinge">
      <Body>left_leg/thigh</Body>
      <Body>left_leg/leg</Body>
      <offsetfrom>left_leg/leg</offsetfrom>
      <weight>4</weight>
      <limitsdeg>-80 80</limitsdeg>
      <axis>1 0 0</axis>
      <maxvel>3</maxvel>
      <resolution>1</resolution>
    </Joint>


   <Body name="left_leg/ankle" type="dynamic">
	<offsetfrom>left_leg/leg</offsetfrom>
	<Translation>-0.0165 0 -0.3</Translation>
      <Geom type="trimesh">
        <Render>models/left_leg/ankle.wrl</Render>
	<collision>models/left_leg/ankle.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="left_leg/ankle" type="hinge">
      <Body>left_leg/leg</Body>
      <Body>left_leg/ankle</Body>
      <offsetfrom>left_leg/ankle</offsetfrom>
      <weight>4</weight>
      <limitsdeg>-45 45</limitsdeg>
      <axis>1 0 0</axis>
      <maxvel>3</maxvel>
      <resolution>1</resolution>
    </Joint>
 
    <Body name="left_leg/foot" type="dynamic">
	<offsetfrom>left_leg/ankle</offsetfrom>
      <Geom type="trimesh">
        <Render>models/left_leg/foot.wrl</Render>
	<collision>models/left_leg/foot.wrl</collision>
      </Geom>
    </Body>

    <Joint circular="true" name="left_leg/foot" type="hinge">
      <Body>left_leg/ankle</Body>
      <Body>left_leg/foot</Body>
      <offsetfrom>left_leg/foot</offsetfrom>
      <weight>4</weight>
      <limitsdeg>-45 45</limitsdeg>
      <axis>0 1 0</axis>
      <maxvel>3</maxvel>
      <resolution>1</resolution>
    </Joint>-->
