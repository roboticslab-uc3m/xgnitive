<!-- teo_action.env.xml -->

<Environment>


    <Robot name="teoSim" file="./teoFull.robot.xml">
        <translation>0 0 0</translation>
    </Robot>

    <KinBody name="floor">  <!-- Floor Dimension: 2 x 2 x 0.2 [m] -->
        <Body type="static">
	        <Geom type="box">
	            <Translation>0.0 0.0 -0.876</Translation>
	            <Extents>1 1 0.02</Extents>
	            <diffuseColor>0.87 0.72 0.52</diffuseColor>  <!-- brown -->
	        </Geom>
        </Body>
    </KinBody>

    <KinBody name="object">  <!-- Object Dimension: 1 x 1 x 0.2 [m] -->
        <Body type="dynamic">
            <Translation>0 -0.288 -0.2</Translation>
	        <Geom type="box">
	            <Extents>.03 .03 0.03</Extents>
	            <diffuseColor>0 1 0</diffuseColor>
	        </Geom>
            <mass type="mimicgeom">
              <density>1000</density>
            </mass>
        </Body>
    </KinBody>

    <KinBody name="wallT" file="./wallT.kinbody.xml">
    </KinBody>

    <Robot file="kinect.robot.xml" name="kinect">
        <!--translation>1.0 -0.668 1.092</translation-->
        <translation>1.1 -0.5 0</translation>
        <!--translation>0.5 -0.618 0.5</translation too close-->
        <!--translation>0.75 -0.618 0.75</translation-->
        <rotationaxis>0 0 1 180</rotationaxis>
        <!--rotationaxis>0 1 0 -42</rotationaxis-->
        <AttachedSensor name="depthMap">
            <link>kinectHead</link>
            <translation>0.028 0 0.0575</translation>
            <rotationaxis>0 1 0 90</rotationaxis>
            <rotationaxis>1 0 0 -90</rotationaxis>
            <sensor type="BaseFlashLidar3D">
                <maxrange>5</maxrange>
                <time_scan>0.2</time_scan>
                <KK>64 48 64 48</KK>
                <width>128</width>
                <height>96</height>
                <color>.9 .9 0</color>
            </sensor>
        </AttachedSensor>
        <AttachedSensor name="imageMap">
            <link>kinectHead</link>
            <translation>0.028 0 0.0575</translation>
            <rotationaxis>0 1 0 90</rotationaxis>
            <rotationaxis>1 0 0 -90</rotationaxis>
            <sensor type="BaseCamera">
                <KK>64 48 64 48</KK>
                <width>128</width>
                <height>96</height>
                <framerate>5</framerate>
                <color>0.5 0.5 1</color>
            </sensor>
        </AttachedSensor>
    </Robot>

</Environment>

